<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ac_bj"
    android:minHeight="120dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/boldLine"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin"
        android:paddingRight="@dimen/margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@mipmap/tiku_daojish_diqu_bg"
                android:gravity="center_vertical"
                android:maxLength="3"
                android:paddingLeft="10dp"
                android:text="武汉"
                android:textColor="@color/white"
                android:textSize="@dimen/tt_size2" />

            <TextView
                android:id="@+id/countdownTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/black_tt3"
                android:textSize="@dimen/tt_size3" />

            <TextView
                android:id="@+id/examinationTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/black_tt3"
                android:textSize="@dimen/tt_size3" />


        </LinearLayout>

        <CheckBox
            android:id="@+id/explain"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@drawable/check_select"
            android:gravity="center"
            android:padding="5dp"
            android:text="设为默认" />
    </LinearLayout>


</LinearLayout>
